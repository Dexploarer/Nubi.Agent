# Enhanced Twitter MCP Server Configuration
# Copy this file to .env and fill in your credentials

# Authentication Method (choose one)
# Options: cookies, credentials
AUTH_METHOD=cookies

# Twitter Credentials (for credentials method)
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email@example.com

# Twitter Cookies (for cookies method - auto-populated after first login)
# Format: JSON array of cookie strings
TWITTER_COOKIES=

# Server Configuration
LOG_LEVEL=info
DISABLE_HTTP_SERVER=false
PORT=3001

# Features
ENABLE_SMART_AUTHENTICATION=true
AUTO_SAVE_COOKIES=true
COOKIE_VALIDATION_ENABLED=true

# Rate Limiting Protection
MAX_REQUESTS_PER_MINUTE=30
REQUEST_RETRY_DELAY=2000

# Security
SESSION_TIMEOUT=3600000
AUTO_LOGOUT_ON_ERROR=false

# Debug
DEBUG_AUTHENTICATION=false
DEBUG_COOKIES=false
VERBOSE_LOGGING=false
